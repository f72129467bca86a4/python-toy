# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

max_line_length = 120

[*.xml]
max_line_length = 10000

[uv.lock]
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_size = unset
max_line_length = unset
